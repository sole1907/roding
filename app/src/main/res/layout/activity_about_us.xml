<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/about_us_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rodingtransparentbg"
        android:paddingBottom="3dp"
        tools:context=".activity.AboutUsActivity">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/app_bar"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/aboutusheader"
                android:orientation="vertical"></LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/aboutusContainer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:text="Who We Are\n\nRODING HEALTHCARE LTD, a subsidiary of The Roding Medical Centre limited, is a healthcare solution provider incorporated in Nigeria to satisfy individual and corporate organization healthcare needs.\n\nOur Vision\n\nTo be the healthcare solutions provider of first choice in Africa.\n\nOur Mission\n\nTo deliver quality and affordable healthcare services that satisfy our customersâ€™ needs and expectations.\n\nOur Core Values (EQIPPIC)\n\n1. Empathy\n2. Quality\n3. Integrity\n4. Professionalism\n5. Promptness\n6. Innovation\n7. Commitment\n\nOffice Address\n\nRoding Healthcare Ltd,\n4 Makoko Road, Adekunle Yaba,\nLagos, Nigeria.\n\nP.O. Box 73271,Victoria Island,Lagos\n\nEmail\ninfo@rodinghealthcareltd.com\nrodinghealthcare@gmail.com\n\nTelephone\n+234 1 295 2577\n+234 807 420 6599\n+234 807 420 6515"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>

    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="roding.soconcepts.com.roding.fragment.NavigationDrawerFragment"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />
</android.support.v4.widget.DrawerLayout>